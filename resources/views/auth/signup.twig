{% extends 'templates/app.twig' %}

{% block content %}
<div class="page login-page">
	<div class="container d-flex align-items-center">
		<div class="form-holder has-shadow">
			<div class="row">
				<!-- Logo & Information Panel-->
				<div class="col-lg-6">
					<div class="info d-flex align-items-center">
						<div class="content">
							<div class="logo">
								<h1>Matcha 42</h1>
							</div>
							<p>Dating web application allowing two potential lovers to meet, from the registration to the final encounter.</p>
						</div>
					</div>
				</div>
				<!-- Form Panel    -->
				<div class="col-lg-6 bg-white">
					<div class="form d-flex align-items-center">
						<div class="content">
							<form action="{{ path_for('auth.signup') }}" method="post" class="form-validate">

								<div class="form-group">
									<input id="register-username" type="text" name="username" required data-msg="Please enter your username" class="input-material">
									<label for="register-username" class="label-material">User Name</label>
									{% if errors.username %}
										{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
										<span class="help-block">{{ errors.username | first }}</span>
									{% endif %}
								</div>

								<div class="form-group">
									<input id="register-firstname" type="text" name="name" required data-msg="Please enter your first name" class="input-material">
									<label for="register-firstname" class="label-material">First Name</label>
									{% if errors.username %}
										{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
										<span class="help-block">{{ errors.username | first }}</span>
									{% endif %}
								</div>

								<div class="form-group">
									<input id="register-secondname" type="text" name="surname" required data-msg="Please enter your second name" class="input-material">
									<label for="register-secondname" class="label-material">Second Name</label>
									{% if errors.username %}
										{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
										<span class="help-block">{{ errors.username | first }}</span>
									{% endif %}
								</div>

								<div class="form-group">
									<input id="register-email" type="emial" name="email" required data-msg="Please enter a valid email address" class="input-material">
									<label for="register-email" class="label-material">Email Address      </label>
									{% if errors.email %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.email | first }}</span>
								{% endif %}
								</div>

								<div class="form-group">
									<input id="register-password" type="password" name="password" required data-msg="Please enter your password" class="input-material">
									<label for="register-password" class="label-material">Password        </label>
										{% if errors.password %}
										{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
										<span class="help-block">{{ errors.password | first }}</span>
									{% endif %}
								</div>

								<div class="form-group">
									<input id="register-repeat-password" type="password" name="password_repeat" required data-msg="Please repeat your password" class="input-material">
									<label for="register-repeat-password" class="label-material">Repeat Password        </label>
									{% if errors.password %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.password_repeat | first }}</span>
								{% endif %}
								</div>

								<div class="form-group terms-conditions">
									<input id="register-agree" name="registerAgree" type="checkbox" required value="1" data-msg="Your agreement is required" class="checkbox-template">
									<label for="register-agree">Agree the terms and policy</label>
								</div>

								<div class="form-group">
									<button id="regidter" type="submit" name="registerSubmit" class="btn btn-primary">Register</button>
								</div>

								{{ csrf.field | raw }}{# raw скроет строку #}

							</form><small>Already have an account? </small><a href="/auth/signin" class="signup">Log in</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="copyrights text-center">
		<p>&copy; 2018 Unit Factory (42 school) project.</p>
		<p>Developed with &#9825; by <a target="_blank" href="https://github.com/Navalag">Navalag</a> &amp; <a target="_blank" href="https://github.com/ozharko">ozharko</a>
		</p>
	</div>
</div>
{% endblock %}
