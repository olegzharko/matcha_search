{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="home">
				<div class="panel panel-default">
					<div class="panel-heading">Sing in</div>
					<div class="panel-body">
						<form action="{{ path_for('auth.signin') }}" method="post" autocomplete="off">
							<div class="form-group{{ errors.email ? ' has-error' : '' }}">
								<label for="email">Email</label>
								<input type="emial" name="email" id="email" placeholder="you@domain.com" class="form-control" value="{{ old.email }}">
								{% if errors.email %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.email | first }}</span>
								{% endif %}
							</div>
							<div class="form-group{{ errors.password ? ' has-error' : '' }}">
								<label for="password">Password</label>
								<input type="password" name="password" class="form-control">
								{% if errors.password %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.password | first }}</span>
								{% endif %}
							</div>
							<button type="submit" class="btn btn-default">Sign in</button>
							{{ csrf.field | raw }}{# raw скроет строку #}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}





