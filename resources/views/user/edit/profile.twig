{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="home">
				<div class="panel panel-default">
					<div class="panel-heading">Edit profile</div>
					<div class="panel-body">
						<form action="{{ path_for('auth.edit.user') }}" method="post" autocomplete="off">
							<div class="form-group{{ errors.email ? ' has-error' : '' }}">
								<label for="email">Email</label>
								<input type="email" name="email" class="form-control" value="{{ edit.email }}">
								{% if errors.email %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.email | first }}</span>
								{% endif %}
							</div>

							<div class="form-group{{ errors.username ? ' has-error' : '' }}">
								<label for="username">Username</label>
								<input type="text" name="username" class="form-control" value="{{ edit.username }}">
								{% if errors.username %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.username | first }}</span>
								{% endif %}
							</div>

							<div class="form-group{{ errors.name ? ' has-error' : '' }}">
								<label for="name">Name</label>
								<input type="text" name="name" class="form-control" value="{{ edit.name }}">
								{% if errors.name %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.name | first }}</span>
								{% endif %}
							</div>


							<div class="form-group{{ errors.surname ? ' has-error' : '' }}">
								<label for="surname">Surname</label>
								<input type="text" name="surname" class="form-control" value="{{ edit.surname }}">
								{% if errors.surname %}
									{#  first - это показать первую строку с массива email  по сосоянию ошибки #}
									<span class="help-block">{{ errors.surname | first }}</span>
								{% endif %}
							</div>

							<button type="submit" class="btn btn-default">Change profile</button>
							{{ csrf.field | raw }}{# raw скроет строку #}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
