
{% extends 'templates/app.twig' %}

{% block content %}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="home">
				<div class="panel panel-default">
					{% if flash.getMessage('info') %}
						<div class="alert alert-info">
							{{ flash.getMessage('info') | first }}
						</div>
					{% endif %}
					<div class="panel-heading">Info profile</div>
					<div class="panel-body">
						<form action="{{ path_for('user.edit.info') }}" method="post" autocomplete="off">
							<div class="form-group{{ errors.gender ? ' has-error' : '' }}">
								<label for="gender">Gender</label>
								<input type="radio" name="gender" class="form-control" value="man">Man
								<input type="radio" name="gender" class="form-control" value="woman">Woman
							</div>

							<div class="form-group{{ errors.describe ? ' has-error' : '' }}">
								<label for="about_me">About me</label>
								<textarea name="about_me" cols="72" rows="10"></textarea>
							</div>

							<div class="form-group{{ errors.sexualPref ? ' has-error' : '' }}">
								<label for="sexual_pref">Sexual preference</label>
								<input type="radio" name="sexual_pref" class="form-control" value="man">Man
								<input type="radio" name="sexual_pref" class="form-control" value="woman">Woman
								<input type="radio" name="sexual_pref" class="form-control" value="bi">Bi
							</div>

							<div class="form-group{{ errors.biography ? ' has-error' : '' }}">
								<label for="biography">Biography</label>
								<textarea  name="biography" cols="72" rows="10"></textarea>
							</div>

							<div class="form-group{{ errors.listOfInterests ? ' has-error' : '' }}">
								<label for="list_of_interests">List of interests</label>
								<input type="checkbox" name="list_of_interests" class="form-control" value="Traveling">Traveling
								<input type="checkbox" name="list_of_interests" class="form-control" value="Shopping">Shopping
								<input type="checkbox" name="list_of_interests" class="form-control" value="Driving">Driving
							</div>

							<button type="submit" class="btn btn-default">Change profile</button>
							{{ csrf.field | raw }}{# raw скроет строку #}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}